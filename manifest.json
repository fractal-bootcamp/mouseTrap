{
  "manifest_version": 3,
  "name": "Hello World with Circle",
  "version": "1.0",
  "description": "A simple Chrome extension that displays a controllable circle",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}