{
  "manifest_version": 3,
  "name": "MouseTrap",
  "version": "1.0",
  "description": "A simple Chrome extension that displays a controllable clip path",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "webNavigation"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}